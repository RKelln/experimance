[Unit]
Description=Experimance Reset on Input - Keyboard/Controller Listener
After=graphical.target experimance@experimance.target
Wants=graphical.target
# Don't require experimance target - we want this to start even if experimance isn't running

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/experimance
ExecStart=/usr/bin/python3 /opt/experimance/infra/scripts/reset_on_input.py
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

# Allow access to input devices
SupplementaryGroups=input

[Install]
WantedBy=graphical.target
