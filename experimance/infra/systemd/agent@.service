[Unit]
Description=Agent Service (%i project)
After=network.target user-1000.slice
Wants=network.target
# Wait for experimance user session to be active (needed for camera/vision access)
Requisite=user-1000.slice

[Service]
Type=simple
User=experimance
Group=experimance
WorkingDirectory=/opt/experimance
Environment=PROJECT_ENV=%i
Environment=EXPERIMANCE_ENV=production
Environment=PATH=/home/experimance/.pyenv/bin:/home/experimance/.local/bin:/usr/local/bin:/usr/bin:/bin
# Wait for user session before starting agent service (camera/vision access)
ExecStartPre=/opt/experimance/infra/scripts/wait_for_desktop_session.sh experimance
ExecStart=/home/experimance/.local/bin/uv run -m experimance_agent
ExecReload=/bin/kill -HUP $MAINPID
Restart=no

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=experimance-agent-%i

# Security
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=false
ReadWritePaths=/opt/experimance /var/cache/experimance /home/experimance/.local /home/experimance/.pyenv

# Audio and video access for microphone and camera
SupplementaryGroups=audio video

[Install]
WantedBy=experimance@.target
