<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.experimance.health.PROJECT_NAME</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/opt/homebrew/bin/uv</string>
        <string>run</string>
        <string>-m</string>
        <string>experimance_health</string>
    </array>
    
    <key>WorkingDirectory</key>
    <string>/opt/experimance</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PROJECT_ENV</key>
        <string>PROJECT_NAME</string>
        <key>EXPERIMANCE_ENV</key>
        <string>production</string>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin</string>
    </dict>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>
    
    <key>StandardOutPath</key>
    <string>/opt/experimance/logs/PROJECT_NAME_health.log</string>
    
    <key>StandardErrorPath</key>
    <string>/opt/experimance/logs/PROJECT_NAME_health_error.log</string>
    
    <key>UserName</key>
    <string>experimance</string>
    
    <key>GroupName</key>
    <string>staff</string>
    
    <!-- Restart on failure after 10 seconds -->
    <key>ThrottleInterval</key>
    <integer>10</integer>
    
    <!-- Only run if network is available -->
    <key>LaunchOnlyOnce</key>
    <false/>
    
    <!-- Wait for network -->
    <key>StartInterval</key>
    <integer>30</integer>
</dict>
</plist>
